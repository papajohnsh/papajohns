<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="sqlMapper.mb">
  	<insert id="memberAdd" parameterType="papa.member.model.MemberDTO">
  		insert into papa_member(id,pwd,name,birthday,gender,phonenumber,email,joindate)
  		values(#{id},#{pwd},#{name},now(),#{gender},#{phonenumber},#{email},now())
  	</insert>
  	<select id="idCheck" parameterType="String">
  		select id from papa_member where id=#{id}
  	</select>
  	<select id="loginCheck" parameterType="Map" resultType="String">
  		select id,pwd from papa_member where id=#{id} and pwd=#{pwd}
  	</select>
  	<select id="getUser" parameterType="String" resultType="papa.member.model.MemberDTO">
  		select name from papa_member where id=#{id}
  	</select>
  </mapper>

