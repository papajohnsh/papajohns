<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="sqlMapper.qnare">
  <insert id="QnArebbsAdd" parameterType="papa.qnare.model.QnaReDTO">
	insert into qna_rebbs(writer,subject,content,write_date,ref)
	values(#{writer},#{subject},#{content},now(),#{ref})
</insert>

<select id="QnArebbsList" resultType="papa.qnare.model.QnaReDTO">
	select * from qna_rebbs where ref=#{idx}
</select>
</mapper>