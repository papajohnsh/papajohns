<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="sqlMapper.cl">
 	<insert id="writeAdd" parameterType="papa.classbbs.model.ClassBbsDTO">
 		insert into class_bbs(writer,subject,content,write_date,readnum,ref,lev,sunbun)
 		values(#{writer},#{subject},#{content},now(),0,0,0,0)
 	</insert>
 	<select id="classList" resultType="papa.classbbs.model.ClassBbsDTO">
 		select * from class_bbs
 	</select>
 	<select id="classContent" parameterType="int" resultType="papa.classbbs.model.ClassBbsDTO">
 		select * from class_bbs where idx=#{idx}
 	</select>
 	<insert id="reWriteAdd" parameterType="papa.classbbs.model.ClassBbsDTO">
 		insert into class_bbs(writer,subject,content,write_date,readnum,ref,lev,sunbun)
 		values(#{writer},#{subject},#{content},now(),0,0,0,0)
 	</insert>
 	<update id="readNum" parameterType="int">
 		update class_bbs set readnum=readnum+1 where idx=#{idx}
 	</update>
 </mapper>